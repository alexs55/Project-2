  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1 class="display-4">GetClose {{msg}}</h1>
        <h2>Find out what's happening in your area!</h2>

        <!-- Insert Map Here -->
        <div class="container">
          <div id="map"></div>
