        <div class="card">
          <div class="card-header">
            {{!-- <h3>What's on your mind?</h3> --}}
            <h6>What's on your mind?</h6>
          </div>
          <div class="card-body">
            {{!-- Insert Form inside card-body --}}
            <!-- Form -->
            <form class="clearfix mb-4" action="POST">
              <!-- name -->
              <div class="form-group">
                <label for="example-text">Name</label>
                <input type="text" id="userName" class="form-control" aria-describedby="example-text" placeholder="Username">
              </div>
              <!-- subject -->
              <div class="form-group">
                <label for="example-text">Subject</label>
                <input type="text" id="subject" class="form-control" aria-describedby="example-text" placeholder="Subject">
              </div>
              <!-- post -->
              <div class="form-group">
                <label for="example-description">Post</label>
                <textarea class="form-control" id="userPost" aria-describedby="example-description" placeholder="What's on your mind?"></textarea>
              </div>
              <button id="submit" class="btn btn-primary float-right">Submit</button>
            </form>
          </div>
        </div>


