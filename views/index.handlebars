<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Find out what is happending in your area!</h2>
        <form class="clearfix mb-4" action="POST">
          <!-- name -->
          <div class="form-group">
            <label for="example-text">Name</label>
            <input type="text" id="userName" class="form-control" aria-describedby="example-text" placeholder="Name/nickname">
          </div>
          <!-- subject -->
          <div class="form-group">
            <label for="example-text">Subject</label>
            <input type="text" id="subject" class="form-control" aria-describedby="example-text" placeholder="Subject">
          </div>
          <!-- post -->
          <div class="form-group">
            <label for="example-description">Post</label>
            <textarea class="form-control" id="userPost" aria-describedby="example-description" placeholder="What is in your mind?"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>


        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
